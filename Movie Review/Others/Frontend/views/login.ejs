<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Login</title>

  </head>
  <body>
    <div class="container">
      <h1>Login</h1>
      <span id="invalid1" style="background-color:orange; display: none;">Incorrect credentials</span>
      <span id="invalid2" style="background-color:orange; display: none;">You are not login</span>
      <form action="/login" method="POST">
        <input
          type="text"
          class="name"
          name="name"
          placeholder="Your Name"
        /><br />
        <input
          type="password"
          class="name"
          name="password"
          placeholder="Password"
        /><br />
        <button type="submit" id="login">Login</button><br />
        <a href="/">Don't have an account signUp</a>
      </form>
    </div>
  </body>
  <script src="js/jquery.js"></script>
  <script type="text/javascript">
    const urlParams = new URLSearchParams(window.location.search);
    const myParam = urlParams.get('valid');
    if(myParam === 'none') $("#invalid1").show();
    else if ( myParam === 'not_allowed') $("#invalid2").show();

  </script>
</html>
